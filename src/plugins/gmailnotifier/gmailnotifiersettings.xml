<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="GMail Notifier" />
		<groupbox>
			<label value="Login settings" />
			<item type="lineedit" property="Login">
				<label value="Login:" />
			</item>
			<item type="lineedit" property="Password" password="true">
				<label value="Password:" />
			</item>
		</groupbox>
		<groupbox>
			<label value="Update settings" />
			<item type="checkbox" property="CheckingEnabled" default="true">
				<label value="Enable checking" />
			</item>
			<item type="spinbox" property="UpdateInterval" default="30" minimum="5" maximum="3600">
				<label value="Update interval:" />
				<suffix value=" s" />
			</item>
		</groupbox>
		<groupbox>
			<label value="Appearance" />
			<item type="spinbox" property="ShowLastNMessages" default="5">
				<label value="Number of messages shown:" />
			</item>
		</groupbox>
	</page>
</settings>
