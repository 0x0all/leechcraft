<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Monocle" />
		<tab>
			<label value="Appearance" />
			<item type="spinbox" property="RecentlyOpenedListSize" default="10" minimum="1" maximum="100">
				<label value="Maximum number of items in Recently Opened list:" />
			</item>
		</tab>
		<tab>
			<label value="Behaviour" />
			<item type="checkbox" property="InhibitScreensaver" default="true">
				<label value="Inhibit screensaver while a Monocle tab is active" />
			</item>
		</tab>
		<tab>
			<label value="Performance" />
			<item type="spinbox" property="PixmapCacheSize" default="128" minimum="0" maximum="1024">
				<label value="Pixmap cache size:" />
				<suffix value=" MiB" />
			</item>
			<item type="checkbox" property="SmoothScrolling" default="true">
				<label value="Smooth scrolling" />
			</item>
		</tab>
		<tab>
			<label value="Default backends" />
			<item type="dataview" property="DefaultBackends" addEnabled="false">
				<label value="Default backends:" />
			</item>
		</tab>
	</page>
</settings>
