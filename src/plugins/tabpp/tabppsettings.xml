<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<declare defaultlang="en" />
	<page>
		<label lang="en" value="Settings" />
		<label lang="ru" value="Настройки" />
		<groupbox>
			<label lang="en" value="Behavior" />
			<label lang="ru" value="Поведение" />
			<item type="checkbox" property="ShowOnHover" default="off">
				<label lang="en" value="Show on action hover" />
				<label lang="ru" value="Показывать при наведении мышки на действие" />
			</item>
			<item type="checkbox" property="FocusOnShow" default="on">
				<label lang="en" value="Focus on the tab list after show" />
				<label lang="ru" value="Фокус на списке табов при показе" />
			</item>
			<item type="checkbox" property="HideOnCtrlEnter" default="on">
				<label lang="en" value="Hide on Ctrl+Enter" />
				<label lang="ru" value="Скрывать по Ctrl+Enter" />
			</item>
		</groupbox>
	</page>
</settings>
