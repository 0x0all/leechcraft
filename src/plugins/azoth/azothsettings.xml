<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<declare defaultlang="en" />
	<page>
		<label lang="en" value="Appearance" />
		<tab>
			<label lang="en" value="Iconsets" />
			<item type="combobox" property="StatusIcons" mayHaveDataSource="true">
				<label lang="en" value="Status icons:" />
				<option name="oxygen" default="true">
					<label lang="en" value="Oxygen" />
				</option>
			</item>
			<item type="combobox" property="ClientIcons" mayHaveDataSource="true">
				<label lang="en" value="Client icons:" />
				<option name="default" default="true">
					<label lang="en" value="default" />
				</option>
			</item>
		</tab>
	</page>
	<page>
		<label value="Behavior" />
		<tab>
			<label value="Behavior" />
			<item type="checkbox" property="JumpToNewTabOnOpen" default="true">
				<label value="Jump to new tab on open" />
			</item>
		</tab>
		<tab>
			<label value="Chat windows" />
			<item type="checkbox" property="ShowStatusChangesEvents" default="false">
				<label value="Show status changes" />
			</item>
		</tab>
	</page>
	<page>
		<label value="Statuses" />
		<groupbox>
			<label value="Default status texts" />
			<item type="lineedit" property="DefaultStatus0" default="I'm online!">
				<label value="Online:" />
			</item>
			<item type="lineedit" property="DefaultStatus1" default="Wanna chat :3">
				<label value="Free to chat:" />
			</item>
			<item type="lineedit" property="DefaultStatus2" default="Oh, seems like I'm away">
				<label value="Away:" />
			</item>
			<item type="lineedit" property="DefaultStatus3" default="Please leave me alone now">
				<label value="DND:" />
			</item>
			<item type="lineedit" property="DefaultStatus4" default="Extended away is okay">
				<label value="XA:" />
			</item>
			<item type="lineedit" property="DefaultStatus5" default="I turned off my machine to get some life">
				<label value="Offline:" />
			</item>
		</groupbox>
	</page>
</settings>