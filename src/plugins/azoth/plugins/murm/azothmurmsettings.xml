<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Azoth Murm" />
		<groupbox>
			<label value="Appearance" />
			<item type="lineedit" property="EntryNameFormat" default="$surname $nick $name">
				<label value="Entry name format:"/>
				<tooltip>The following variables are allowed: $name, $nick, $surname.</tooltip>
			</item>
		</groupbox>
		<groupbox>
			<label value="Connection" />
			<item type="checkbox" property="RequireOffline" default="false">
				<label value="Require Offline permissions to avoid reauthentification on IP change" />
			</item>
		</groupbox>
		<groupbox>
			<label value="In-chat images" />
			<item type="combobox" property="ShowImagesInChat">
				<label value="Show images in chat:" />
				<option name="Embedded" default="true">
					<label value="embedded" />
				</option>
				<option name="Links">
					<label value="as links" />
				</option>
			</item>
			<item type="combobox" property="StickersSize">
				<label value="Stickers size in pixels:" />
				<option name="48" />
				<option name="64" />
				<option name="128" />
				<option name="256" default="true" />
				<option name="352" />
				<option name="512" />
			</item>
		</groupbox>
	</page>
</settings>
